<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteEditorActivity">

    <EditText
        android:id="@+id/titleET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/NoteEditorLayoutColor"
        android:hint="@string/TITLE"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColor="@color/NoteEditorTextColor"
        android:textColorHint="@color/NoteEditorHintTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/descriptionET"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/NoteEditorLayoutColor"
        android:gravity="start"
        android:hint="@string/DESCRIPTION"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColor="@color/NoteEditorTextColor"
        android:textColorHint="@color/NoteEditorHintTextColor"
        app:layout_constraintBottom_toTopOf="@+id/confirmFAB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleET" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/confirmFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="@color/fabButton"
        android:src="@drawable/check_sign"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="25dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deleteFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="@color/fabButton"
        android:src="@drawable/delete_icon"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>