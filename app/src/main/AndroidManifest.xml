<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chanpreet.notes">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.NOTES">
        <activity
            android:name="com.chanpreet.notes.NoteEditorActivity"
            android:exported="false" />
        <activity
            android:name="com.chanpreet.notes.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.chanpreet.notes.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chanpreet.notes.DisplayNoteActivity"
            android:exported="false" />
    </application>

</manifest>